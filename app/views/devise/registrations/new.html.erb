<div class="auth-container">
  <h2 class="auth-title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-form-group">
      <%= f.label :email, class: "auth-label" %>
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "auth-input" %>
    </div>

    <div class="auth-form-group">
      <div style="display: flex; justify-content: space-between;">
        <%= f.label :password, class: "auth-label" %>
        <% if @minimum_password_length %>
          <span style="font-size: 10px; color: var(--ctp-subtext0); font-style: italic;">
            (<%= @minimum_password_length %>
            min)
          </span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-form-group">
      <%= f.label :password_confirmation, class: "auth-label" %>
      <%= f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       class: "auth-input" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Sign up", class: "auth-submit" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
