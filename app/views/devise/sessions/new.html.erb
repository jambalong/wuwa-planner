<div class="auth-container">
  <h2 class="auth-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="auth-form-group">
      <%= f.label :email, class: "auth-label" %>
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "auth-input" %>
    </div>

    <div class="auth-form-group">
      <%= f.label :password, class: "auth-label" %>
      <%= f.password_field :password,
                       autocomplete: "current-password",
                       class: "auth-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="auth-form-group checkbox-group">
        <%= f.check_box :remember_me, class: "auth-checkbox" %>
        <%= f.label :remember_me, class: "auth-label-inline" %>
      </div>
    <% end %>

    <div class="pt-4">
      <%= f.submit "Log in", class: "auth-submit" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
