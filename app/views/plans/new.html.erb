<%= turbo_frame_tag "modal" do %>
  <%# Modal backdrop %>
  <div
    data-controller="modal"
    class="modal-backdrop"
    data-action="keydown.esc->modal#close click->modal#closeOutside"
  >

    <%# Modal container %>
    <div class="modal-container">

      <%# Close button %>
      <%# <button
        data-action="click->modal#close"
        class="modal-close-btn transition-colors"
      >
        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
        </svg>
      </button> %>

      <%# Modal content %>
      <div id="modal-content">
        <% case @step %>
        <% when 1 %>
          <%= render "step_1" %>
        <% when 2 %>
          <%= render "step_2", subject_type: @subject_type, subject_list: @subject_list %>
        <% when 3 %>
          <%= render "step_3", plan: @form, subject: @subject, subject_type: @subject_type, errors: @errors %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
