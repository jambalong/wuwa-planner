<%# Add new plan to plan list %>
<%= turbo_stream.append "plans-list" do %>
  <%= render partial: "plans/plan", locals: { plan: @plan } %>
<% end %>

<%= turbo_stream.update "materials-summary-content" do %>
  <%= render "plans/materials_summary", materials_summary: @materials_summary %>
<% end %>

<%# Close the new plan modal %>
<%= turbo_stream.replace "modal" do %>
  <turbo-frame id="modal"></turbo-frame>
<% end %>
