<%= turbo_frame_tag "modal" do %>
  <div
    data-controller="modal"
    data-action="click->modal#closeOutside"
    class="
      fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/60
      backdrop-blur-sm
    "
  >
    <div
      class="
        relative w-full max-w-sm bg-ctp-base border-3 border-ctp-crust rounded-2xl
        shadow-2xl p-6 animate-in zoom-in duration-200
      "
    >
      <%# Warning Icon %>
      <div
        class="
          w-12 h-12 bg-ctp-red text-ctp-base rounded-full flex items-center justify-center
          mx-auto mb-4
        "
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
          />
        </svg>
      </div>

      <h3 class="text-lg font-bold text-ctp-text text-center">Delete Plan?</h3>
      <p class="text-sm text-ctp-subtext0 text-center mt-2 mb-6">
        Are you sure you want to delete the plan for
        <span class="font-semibold text-ctp-mauve"><%= @plan.plan_data.dig("input", "name") %></span>?
        <span class="text-ctp-overlay0">This cannot be undone.</span>
      </p>

      <div class="flex gap-3">
        <%# Cancel: Just closes the modal %>
        <button
          data-action="click->modal#close"
          class="
            flex-1 px-4 py-2 bg-ctp-surface0 text-ctp-text font-bold rounded-xl
            hover:bg-ctp-surface1 transition-colors
          "
        >
          Cancel
        </button>

        <%# Delete: Submits the actual DELETE request %>
        <%= button_to "Confirm",
        plan_path(@plan),
        method: :delete,
        class:
          "flex-1 px-4 py-2 bg-ctp-red text-ctp-base font-bold rounded-xl hover:bg-red-700 hover:text-white shadow-lg shadow-ctp-crust transition-all" %>
      </div>
    </div>
  </div>
<% end %>
