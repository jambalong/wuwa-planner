<%# locals: (step:, item:, plan_type:, items: nil, errors: nil) %>

<div class="p-8">
  <header class="mb-6 flex justify-between items-start">
    <div>
      <h2 class="text-2xl font-black text-gray-900 tracking-tight"><%= item.name %></h2>
      <p class="text-sm text-gray-500 tracking-wide uppercase font-semibold">Configure
        <%= plan_type %>
        Plan</p>
    </div>
  </header>

  <%# Pass the locals into the main form %>
  <%= render "form", item: item, plan_type: plan_type, errors: errors %>

  <footer class="mt-8 pt-4 border-t border-gray-100">
    <%= link_to new_plan_path(plan_type: plan_type, step: 2), 
        data: { turbo_frame: "modal" },
        class: "text-xs font-bold text-gray-400 hover:text-blue-600 flex items-center gap-1 transition-colors" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-3 w-3"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="3"
          d="M15 19l-7-7 7-7"
        />
      </svg>
      Back
    <% end %>
  </footer>
</div>
